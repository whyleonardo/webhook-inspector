{
    "formatter": "language_server",
    "format_on_save": "on",
    "languages": {
        "CSS": {
            "language_servers": [
                "tailwindcss-language-server"
            ]
        },
        "JavaScript": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "TypeScript": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "JSX": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "TSX": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        }
    },
    "lsp": {
        "typescript-language-server": {
            "settings": {
                "typescript": {
                    "preferences": {
                        "includePackageJsonAutoImports": "on"
                    }
                }
            }
        }
    }
}
