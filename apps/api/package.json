{
    "name": "api",
    "version": "1.0.50",
    "scripts": {
        "dev": "bun run --watch src/server.ts",
        "build": "bun build --compile --target bun --outfile dist/server src/server.ts",
        "start": "dist/server",
        "db:generate": "bunx --bun drizzle-kit generate",
        "db:migrate": "bunx --bun drizzle-kit migrate",
        "db:studio": "bun --bun drizzle-kit studio"
    },
    "dependencies": {
        "@elysiajs/cors": "^1.4.0",
        "@elysiajs/openapi": "^1.4.11",
        "drizzle-orm": "^0.44.7",
        "drizzle-zod": "^0.8.3",
        "elysia": "latest",
        "pg": "^8.16.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/pg": "^8.15.6",
        "bun-types": "latest",
        "drizzle-kit": "^0.31.5"
    }
}
